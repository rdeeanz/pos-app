generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//
// ENUMS
//

enum Role {
  OWNER
  OPS
  CASHIER
}

enum SaleStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentMethod {
  CASH
  QRIS
}

enum PaymentProvider {
  NONE
  MIDTRANS
}

enum PaymentStatus {
  PENDING
  PAID
  EXPIRED
  FAILED
}

enum StockMovementType {
  SALE
  ADJUSTMENT
  RESTOCK
  REFUND
}

//
// MODELS
//

model User {
  id                 String  @id @default(cuid())
  name               String
  email              String  @unique
  passwordHash       String?
  role               Role    @default(CASHIER)
  mustChangePassword Boolean @default(false)

  sales Sale[] @relation("CashierSales")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Category {
  id   String @id @default(cuid())
  name String @unique

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id         String  @id @default(cuid())
  categoryId String?

  sku      String? @unique
  barcode  String? @unique
  name     String
  price    Int
  cost     Int?
  imageUrl String?
  isActive Boolean @default(true)

  category  Category?       @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  inventory Inventory?
  saleItems SaleItem[]
  movements StockMovement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([categoryId])
}

model Inventory {
  productId String @id
  qtyOnHand Int    @default(0)

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
}

model Sale {
  id           String  @id @default(cuid())
  cashierId    String
  customerName String?

  status SaleStatus @default(PENDING)
  total  Int        @default(0)

  cashier  User       @relation("CashierSales", fields: [cashierId], references: [id], onDelete: Restrict)
  items    SaleItem[]
  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cashierId, createdAt])
  @@index([status, createdAt])
}

model SaleItem {
  id        String @id @default(cuid())
  saleId    String
  productId String

  qty      Int
  price    Int
  subtotal Int

  sale    Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([saleId])
  @@index([productId])
}

model Payment {
  id     String @id @default(cuid())
  saleId String

  method   PaymentMethod
  provider PaymentProvider @default(NONE)

  providerRef String?
  qrisUrl     String?

  amount Int
  status PaymentStatus @default(PENDING)

  rawNotification Json?

  sale Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([saleId])
  @@index([provider, providerRef])
  @@index([status, createdAt])
}

model StockMovement {
  id        String @id @default(cuid())
  productId String

  type      StockMovementType
  qtyDelta  Int
  refSaleId String?
  note      String?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())

  @@index([productId, createdAt])
  @@index([type, createdAt])
  @@index([refSaleId])
}

model ReceiptTemplate {
  id           String  @id @default(cuid())
  storeName    String?
  storeAddress String?
  storePhone   String?
  footerText   String?
  logoUrl      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
